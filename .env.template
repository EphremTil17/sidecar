# --- API Configuration ---
GOOGLE_API_KEY=AIza...

# --- Screen Capture Configuration ---
# Monitor index to capture (Default: 1 for Primary)
SIDECAR_MONITOR_INDEX=1

# Crop Margins (Pixels to exclude from capture)
SIDECAR_CROP_TOP=120
SIDECAR_CROP_BOTTOM=40
SIDECAR_CROP_LEFT=0
SIDECAR_CROP_RIGHT=0

# --- Hotkey Configuration ---
# Modifiers are hardcoded as Ctrl + Alt + Shift
# Set the primary trigger key (e.g., P, M, S)
HOTKEY_PROCESS=P
HOTKEY_TALK=T
HOTKEY_MODEL_TOGGLE=M
HOTKEY_SKILL_SWAP=S

# --- Intelligence Configuration ---
SIDECAR_ENGINE=gemini # Mode: gemini (Reasoning) or groq (Speed)
GOOGLE_API_KEY=
GROQ_API_KEY=

# --- Sensor Configuration ---
PROJECT_ROOT=.
TRANSCRIPTION_PATH=transcription.txt

# Models must be compatible with their respective SDKs
MODEL_FLASH=gemini-3-flash-preview
MODEL_PRO=gemini-3-pro-preview
GROQ_MODEL=meta-llama/llama-4-maverick-17b-128e-instruct
GROQ_STT_MODEL=whisper-large-v3-turbo
SIDECAR_THINKING_LEVEL=high # Options: low, medium, high (Gemini only)
AUDIO_SAMPLE_RATE=16000 # Typical values: 16000, 44100, 48000

# --- Debug Configuration ---
SIDECAR_DEBUG=False

# --- Ghost Protocol (Console Transparency) ---
# Set to 'True' to make the terminal window transparent and always-on-top
# This applies transparency directly to the console window (no separate overlay)
GHOST_MODE_AUTO=False 

# Opacity level for transparent console (0.0 = invisible, 1.0 = fully opaque)
# Recommended: 0.75-0.85 for readability while maintaining ghost aesthetic
GHOST_OPACITY=0.78

# Font configuration for ghost terminal
GHOST_FONT_SIZE=10
GHOST_FONT_FAMILY=Consolas

# Theme color (currently used for overlay mode only)
GHOST_THEME=cyan # Options: cyan, green
