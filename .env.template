# --- Application Identification ---
SIDECAR_ENGINE=gemini # Mode: gemini (Reasoning) or groq (Speed)

# --- API Configuration ---
GOOGLE_API_KEY=
GROQ_API_KEY=

# --- Screen Capture Configuration ---
# Monitor index to capture (Default: 1 for Primary)
SIDECAR_MONITOR_INDEX=1

# Crop Margins (Pixels to exclude from capture)
SIDECAR_CROP_TOP=120
SIDECAR_CROP_BOTTOM=40
SIDECAR_CROP_LEFT=0
SIDECAR_CROP_RIGHT=0

# --- Intelligence Configuration ---
# Models must be compatible with their respective SDKs
MODEL_FLASH=models/gemini-3-flash-preview
MODEL_PRO=models/gemini-3-pro-preview
GROQ_MODEL=meta-llama/llama-4-maverick-17b-128e-instruct
GROQ_STT_MODEL=whisper-large-v3-turbo
THINKING_LEVEL=high # Options: low, medium, high (Gemini only)
AUDIO_SAMPLE_RATE=16000 # Typical values: 16000, 44100, 48000

# --- Ghost Protocol (Terminal Aesthetics) ---
# Opacity level for transparent console (0.0 = invisible, 1.0 = fully opaque)
GHOST_OPACITY=0.78
GHOST_FONT_SIZE=10
GHOST_FONT_FAMILY=Consolas

# --- Hotkey Configuration ---
# Format: [Modifiers]+[Key] (Modifiers: Ctrl, Alt, Shift, Win)
# Modifiers are joined by '+' e.g. 'Ctrl+Alt+Shift+P'

HOTKEY_PIXEL=Ctrl+Alt+Shift+P
HOTKEY_TALK=Ctrl+Alt+Shift+T
HOTKEY_MODEL=Ctrl+Alt+Shift+M
HOTKEY_ENGINE=Ctrl+Alt+Shift+E
HOTKEY_SKILL=Ctrl+Alt+Shift+S

# Window Movement
HOTKEY_MOVE_UP=Ctrl+Alt+Up
HOTKEY_MOVE_DOWN=Ctrl+Alt+Down
HOTKEY_MOVE_LEFT=Ctrl+Alt+Left
HOTKEY_MOVE_RIGHT=Ctrl+Alt+Right

# Font & Scrolling
HOTKEY_FONT_UP=Ctrl+Alt+Plus
HOTKEY_FONT_DOWN=Ctrl+Alt+Minus
HOTKEY_SCROLL_UP=Ctrl+Alt+PgUp
HOTKEY_SCROLL_DOWN=Ctrl+Alt+PgDn

# --- Troubleshooting ---
SIDECAR_DEBUG=False
PROJECT_ROOT=.
TRANSCRIPTION_PATH=transcription.txt
